from datetime import datetime

from config import db, app
from modelosBanco import Evento, Usuario

with app.app_context():
    usuBanco = Usuario.query.filter_by(id=1).first()

    # Adicionar 30 tarefas para o usuário com ID 1
    for i in range(1, 31):
        data_evento = datetime.now().strftime('%Y-%m-%d')
        evento = Evento(nome_evento=f'Evento: {i}', data_evento=data_evento, descricao=f'Descricao {i}', id_usuario=usuBanco.id)
        db.session.add(evento)

    # Confirmar as inserções
    db.session.commit()

print("30 tarefas foram adicionadas para o usuário com ID 1.")